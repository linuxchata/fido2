<Project Sdk="Microsoft.NET.Sdk.Web">

  <PropertyGroup>
    <IsPackable>true</IsPackable>
    <IsNuGetPackable>true</IsNuGetPackable>
    <PackageType>Template</PackageType>
    <ExcludeFromCodeCoverage>true</ExcludeFromCodeCoverage>
  </PropertyGroup>

  <ItemGroup>
    <Content Update="appsettings.json;wwwroot\**;Pages\**;Controllers\**;Services\**" Pack="true" PackagePath="content\" />
    <Compile Update="**\*.cs" Pack="true" PackagePath="content\" />
    <Content Include=".template.config\**" Pack="true" PackagePath="content\.template.config\" />
    <None Include="Shark.Fido2.VisualStudio.Template.csproj" Pack="true" PackagePath="content\" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Shark.Fido2.Core" Version="1.2.1.94" />
    <PackageReference Include="Shark.Fido2.InMemory" Version="1.2.1.94" />
    <PackageReference Include="Shark.Fido2.Models" Version="1.2.1.94" />
  </ItemGroup>

</Project>
