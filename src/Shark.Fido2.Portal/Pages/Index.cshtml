@page
@model IndexModel

<div class="auth-container">
    <!-- Sign Up Section -->
    <div class="auth-section signup-section">
        <div class="auth-header">
            <h2>Create Account</h2>
            <p>Sign up with FIDO2 for enhanced security</p>
        </div>
        <form id="signupForm">
            <div class="form-group">
                <label for="signupUsername">Username</label>
                <input type="text" id="signupUsername" class="form-control" placeholder="Enter your username" required>
            </div>
            <div class="form-group">
                <label for="displayName">Display Name</label>
                <input type="text" id="displayName" class="form-control" placeholder="Enter your display name" required>
            </div>
            <button type="button" id="signupButton" class="btn btn-primary btn-block">Sign Up</button>
        </form>
    </div>

    <!-- Sign In Section -->
    <div class="auth-section signin-section">
        <div class="auth-header">
            <h2>Welcome Back</h2>
            <p>Sign in with your FIDO2 credentials</p>
        </div>
        <form id="signinForm">
            <div class="form-group">
                <label for="signinUsername">Username</label>
                <input type="text" id="signinUsername" class="form-control" placeholder="Enter your username" required>
            </div>
            <input type="hidden" id="credentialId" name="credentialId" />
            <button type="button" id="signinButton" class="btn btn-primary btn-block">Sign In</button>
            <button type="button" id="credentialDetailsButton" class="btn btn-success btn-block mt-2" onclick="window.location.href='/CredentialsDetails?credentialId=' + document.getElementById('credentialId').value">Get Credential Details</button>
        </form>
    </div>
</div>

<div class="disclaimer">
    <p>FIDO2 credentials are temporarily stored in memory cache for a maximum of 24 hours.</p>
</div>
