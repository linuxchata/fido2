@page
@model IndexModel

<div class="main-container">
    <!-- Sign Up Section -->
    <div class="main-section signup-section">
        <div class="main-header">
            <h2>Create Account</h2>
            <p>Sign up with FIDO2 for enhanced security</p>
        </div>
        <form id="signupForm">
            <div class="form-group">
                <!-- Hidden dummy email input to catch Chrome autofill -->
                <input type="email" style="position: absolute; opacity: 0; height: 0; width: 0; pointer-events: none;" autocomplete="email" tabindex="-1" aria-hidden="true">
                <label for="signUpIdentifier">Username</label>
                <input type="text" id="signUpIdentifier" name="signUpIdentifier" class="form-control" placeholder="Enter your username" required autocomplete="username">
            </div>
            <div class="form-group">
                <label for="signUpAlias">Display Name</label>
                <input type="text" id="signUpAlias" class="form-control" placeholder="Enter your display name" required autocomplete="name">
            </div>
            <button type="button" id="signUpButton" name="signUpButton" class="btn btn-primary btn-block">Sign Up</button>
        </form>
    </div>

    <!-- Sign In Section -->
    <div class="main-section signin-section">
        <div class="main-header">
            <h2>Welcome Back</h2>
            <p>Sign in with your FIDO2 credentials</p>
        </div>
        <form id="signinForm">
            <div class="form-group">
                <!-- Hidden dummy email input to catch Chrome autofill -->
                <input type="email" style="position: absolute; opacity: 0; height: 0; width: 0; pointer-events: none;" autocomplete="email" tabindex="-1" aria-hidden="true">
                <label for="signInIdentifier">Username</label>
                <input type="text" id="signInIdentifier" name="signInIdentifier" class="form-control" placeholder="Enter your username" required autocomplete="username">
            </div>
            <input type="hidden" id="credentialId" name="credentialId" />
            <button type="button" id="signInButton" class="btn btn-primary btn-block">Sign In</button>
            <button type="button" id="credentialsButton" class="btn btn-secondary btn-block hide">Credentials</button>
        </form>
    </div>
</div>

<div class="disclaimer">
    <p>FIDO2 credentials are temporarily stored in memory cache for a maximum of 24 hours.</p>
</div>
