    <!-- Getting Started Section -->
    <section id="getting-started" class="getting-started">
        <div class="landing-container">
            <div class="section-header">
                <h2>Get Started in Minutes</h2>
                <p>Install the package and start building secure authentication flows</p>
            </div>
            <div class="steps-grid">
                <div class="card">
                    <div class="step-title">
                        <span class="step-number">1</span>
                        <h3>Install Packages</h3>
                    </div>
                    <div class="code-block">
                        dotnet add package Shark.Fido2.Core<br />
                        dotnet add package Shark.Fido2.Models<br />
                        dotnet add package Shark.Fido2.InMemory
                    </div>
                </div>
                <div class="card">
                    <div class="step-title">
                        <span class="step-number">2</span>
                        <h3>Configure Services</h3>
                    </div>
                    <div class="code-block">
                        builder.Services.AddFido2(builder.Configuration);
                    </div>
                </div>
                <div class="card">
                    <div class="step-title">
                        <span class="step-number">3</span>
                        <h3>Configure Storage Provider</h3>
                    </div>
                    <div class="code-block">
                        builder.Services.AddFido2InMemory();
                    </div>
                </div>
                <div class="card">
                    <div class="step-title">
                        <span class="step-number">4</span>
                        <h3>Provide Configuration</h3>
                    </div>
                    <div class="code-block">
                        {<br />
                        &nbsp;&nbsp;"RelyingPartyId": "shark-fido2.com",<br />
                        &nbsp;&nbsp;"RelyingPartyIdName": "Shark Corporation",<br />
                        &nbsp;&nbsp;"Origins": [ "shark-fido2.com" ],<br />
                        &nbsp;&nbsp;"Timeout": "60000",<br />
                        &nbsp;&nbsp;"EnableMetadataService": true<br />
                        }
                    </div>
                </div>
            </div>
        </div>
    </section>

