@page
@model Shark.Fido2.Portal.Pages.CredentialsDetailsModel

<div class="auth-container">
    <div class="auth-section">
        <div class="auth-header">
            <h2>Credential Details</h2>
        </div>

        @if (Model.CredentialId == null || Model.CredentialId.Length == 0)
        {
            <div class="alert alert-warning">
                No credential details available. Please sign in first.
            </div>
        }
        else
        {
            <div class="card">
                <div class="card-body">
                    <div class="row mb-3">
                        <div class="col-md-3">
                            <strong>Credential identifier:</strong>
                        </div>
                        <div class="col-md-8">
                            <code>@Convert.ToBase64String(Model.CredentialId)</code>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-3">
                            <strong>User handle:</strong>
                        </div>
                        <div class="col-md-8">
                            <code>@Convert.ToBase64String(Model.UserHandle)</code>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-3">
                            <strong>User name:</strong>
                        </div>
                        <div class="col-md-8">
                            @Model.UserName
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-3">
                            <strong>User display name:</strong>
                        </div>
                        <div class="col-md-8">
                            @Model.UserDisplayName
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-3">
                            <strong>Sign count:</strong>
                        </div>
                        <div class="col-md-8">
                            @Model.SignCount
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-3">
                            <strong>Algorithm:</strong>
                        </div>
                        <div class="col-md-8">
                            @Model.Algorithm
                        </div>
                    </div>

                    @if (Model.Transports != null && Model.Transports.Any())
                    {
                        <div class="row mb-3">
                            <div class="col-md-3">
                                <strong>Transports:</strong>
                            </div>
                            <div class="col-md-8">
                                <ul class="list-unstyled mb-0">
                                    @foreach (var transport in Model.Transports)
                                    {
                                        <li>@transport</li>
                                    }
                                </ul>
                            </div>
                        </div>
                    }

                    <div class="row mb-3">
                        <div class="col-md-3">
                            <strong>Created at (yyyy-MM-dd):</strong>
                        </div>
                        <div class="col-md-8">
                            @Model.CreatedAt
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-3">
                            <strong>Updated at (yyyy-MM-dd):</strong>
                        </div>
                        <div class="col-md-8">
                            @Model.UpdatedAt
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>