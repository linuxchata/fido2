@page
@model Shark.Fido2.Portal.Pages.CredentialsDetailsModel

<div class="container mt-4">
    <h1 class="mb-4">Credential Details</h1>

    @if (Model.CredentialId == null || Model.CredentialId.Length == 0)
    {
        <div class="alert alert-warning">
            No credential details available. Please sign in first.
        </div>
    }
    else
    {
        <div class="card">
            <div class="card-body">
                <div class="row mb-3">
                    <div class="col-md-4">
                        <strong>Credential ID:</strong>
                    </div>
                    <div class="col-md-8">
                        <code>@Convert.ToBase64String(Model.CredentialId)</code>
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-4">
                        <strong>User Handle:</strong>
                    </div>
                    <div class="col-md-8">
                        <code>@Convert.ToBase64String(Model.UserHandle)</code>
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-4">
                        <strong>Username:</strong>
                    </div>
                    <div class="col-md-8">
                        @Model.Username
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-4">
                        <strong>Sign Count:</strong>
                    </div>
                    <div class="col-md-8">
                        @Model.SignCount
                    </div>
                </div>

                @if (Model.Transports != null && Model.Transports.Any())
                {
                    <div class="row mb-3">
                        <div class="col-md-4">
                            <strong>Transports:</strong>
                        </div>
                        <div class="col-md-8">
                            <ul class="list-unstyled mb-0">
                                @foreach (var transport in Model.Transports)
                                {
                                    <li>@transport</li>
                                }
                            </ul>
                        </div>
                    </div>
                }
            </div>
        </div>
    }
</div> 